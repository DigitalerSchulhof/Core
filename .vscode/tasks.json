{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "core",
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": "^(Warning|Error): (.+) in (.+) on line (\\d+)$",
              "severity": 1,
              "message": 2,
              "file": 3,
              "location": 4
            }
          ],
          "fileLocation": "absolute"
        }
      ]
    },
    {
      "type": "npm",
      "script": "build",
      "problemMatcher": [
        "$eslint-stylish",
        "$ts-webpack",
        {
          "pattern": [
            {
              "regexp": "^(?:Warning|Error): (.+) in (.+) on line (\\d+)",
              "file": 2,
              "location": 3,
              "message": 1
            }
          ]
        }
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "label": "Build",
      "detail": "TypeScript auf stilistische und syntaktische Fehler prüfen, transpilieren, und bündeln - Schulhof .core herstellen"
    }
  ]
}
