{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev.php",
      "type": "process",
      "command": "php",
      "args": [
        "-f",
        "dev/dev.php"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "type": "npm",
      "script": "tslint",
      "problemMatcher": [
        "$eslint-compact"
      ],
      "label": "npm: tslint",
      "detail": "eslint --fix ./**/*.ts"
    },
    {
      "type": "npm",
      "script": "tsc",
      "problemMatcher": [
        "$tsc"
      ],
      "label": "npm: tsc",
      "detail": "tsc"
    }
  ]
}